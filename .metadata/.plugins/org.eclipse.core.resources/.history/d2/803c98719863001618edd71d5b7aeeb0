package array;

import java.util.Scanner;

public class minJump {

	public static void main(String[] args) {
		
		Scanner sc=new Scanner (System.in);
		
		int n=sc.nextInt();
		int a[]=new int[n];
		for(int i=0;i<n;i++)
			a[i]=sc.nextInt();
		
		int i=0;
		int  count=0;
		
		while(i<n){
			if(a[i+2]==0)
			{
				i+=2;
				count++;
			}
		}
		

	}

}
