package string;

public class DeleteGivenChar {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		String str= "abcdefghi";
		String s="";
		char c= 'd';
		for(int i=0;i<str.length();i++){
			if(str.charAt(i)==c){
				s= str.substring(0, i);
				s=s+ str.substring(i+1);
				break;
			}
		}

	}

}
